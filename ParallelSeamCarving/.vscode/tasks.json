{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Seam Carving",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "command": "gcc",
            "args": [
                "-lm",
                "--openmp",
                "-g3",
                "-O0",
                "seam_carving.c",
                "-o",
                "seam_carving.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}